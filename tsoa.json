{
  "entryFile": "./src/index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["./src/controllers/**/*Controller.ts"],
  "spec": {
    "host": "localhost:3000",
    "basePath": "/v1/",
    "outputDirectory": "./spec",
    "specVersion": 3,
    "specFileBaseName": "petStore",
    "description": "This is the API for the Pet Store.",
    "info": {
      "title": "Pet Store",
      "version": "1.0.0"
    },
    "license": "Apache 2.0",
    "contact": {
      "name": "Dan Tolbert: dantolbe@cisco.com",
      "url": "https://developer.cisco.com"
    },
    "securityDefinitions": {
      "api_key": {
        "type": "apiKey",
        "name": "api_key",
        "in": "query",
        "description": "Access Key, default is abc123456"
      }
    },
    "schemes": ["http"],
    "tags": [
      {
        "name": "Read",
        "description": "Read operations"
      },
      {
        "name": "Write",
        "description": "Write operations"
      }
    ]
  },
  "routes": {
    "basePath": "/v1",
    "routesDir": "./src/routes",
    "authenticationModule": "./src/auth.ts"
  }
}
