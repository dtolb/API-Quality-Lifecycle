  "components": {
    "parameters": {},
    "schemas": {
      "ErrorBody": {
        "description": "Error response returned on failure",
        "type": "object",
        "properties": {
          "message": {
            "description": "The message informing users of their error",
            "type": "string"
          }
        },
        "additionalProperties": false,
        "required": [
          "message"
        ]
      },
      "CommonResponseHeader": {
        "description": "Common Headers Returned",
        "type": "object",
        "properties": {
          "TrackingId": {
            "description": "Track each request's by this ID",
            "type": "string"
          },
          "Date": {
            "description": "datetime of the request",
            "type": "string"
          }
        },
        "example": {
          "TrackingId": "39580sdkgj2352",
          "Date": "2023-08-26"
        },
        "additionalProperties": false,
        "required": [
          "TrackingId",
          "Date"
        ]
      },
      "Pet": {
        "type": "object",
        "properties": {
          "name": {
            "description": "The name of the pet, can be updated later",
            "type": "string"
          },
          "species": {
            "description": "The species of the pet",
            "type": "string"
          },
          "id": {
            "description": "The id of the pet, used for update and fetching",
            "type": "number",
            "format": "double"
          }
        },
        "example": {
          "id": 2,
          "name": "Fargo",
          "species": "dog"
        },
        "additionalProperties": false,
        "required": [
          "name",
          "species",
          "id"
        ]
      },
      "PetsList": {
        "type": "object",
        "properties": {
          "items": {
            "description": "The list of pets",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Pet"
            }
          }
        },
        "additionalProperties": false,
        "required": [
          "items"
        ]
      },
      "ListPetsHeaders": {
        "description": "Common Headers Returned",
        "type": "object",
        "properties": {
          "TrackingId": {
            "description": "Track each request's by this ID",
            "type": "string"
          },
          "Date": {
            "description": "datetime of the request",
            "type": "string"
          },
          "link": {
            "description": "the URL to request more pets",
            "type": "string"
          }
        },
        "example": {
          "TrackingId": "39580sdkgj2352",
          "Date": "2023-08-26",
          "link": "https://myPets.com/v1/pets?link=123"
        },
        "additionalProperties": false,
        "required": [
          "TrackingId",
          "Date",
          "link"
        ]
      },
      "CreatePetRequest": {
        "type": "object",
        "properties": {
          "name": {
            "description": "The name of the pet, can be updated later",
            "type": "string"
          },
          "species": {
            "description": "The species of the pet",
            "type": "string"
          }
        },
        "example": {
          "name": "Fargo",
          "species": "dog"
        },
        "additionalProperties": false,
        "required": [
          "name",
          "species"
        ]
      },
      "UpdatePetRequest": {
        "type": "object",
        "properties": {
          "name": {
            "description": "The name of the pet, can be updated later",
            "type": "string"
          }
        },
        "example": {
          "name": "Dolph"
        },
        "additionalProperties": false,
        "required": [
          "name"
        ]
      }
    },
    "examples": {},
    "headers": {},
    "requestBodies": {},
    "responses": {},
    "securitySchemes": {
      "api_key": {
        "type": "apiKey",
        "name": "api_key",
        "in": "query",
        "description": "Access Key, default is abc123456"
      }
    }
